{
  "$schema": "http://json-schema.org/draft-04/schema",
  "block": {
    "type": "object",
    "properties": {
      "id": {
        "$ref": "../common_definitions.json#/id"
      },
      "section_number": {
        "type": "string"
      },
      "title": {
        "$ref": "../string_interpolation/definitions.json#/string_with_placeholders"
      },
      "description": {
        "$ref": "../string_interpolation/definitions.json#/string_with_placeholders"
      },
      "number": {
        "type": "string"
      },
      "type": {
        "type": "string",
        "enum": ["Interstitial"]
      },
      "content_variants": {
        "$ref": "../common_definitions.json#/content_variants"
      },
      "content": {
        "$ref": "../common_definitions.json#/content"
      },
      "routing_rules": {
        "ref": "../common_definitions.json#/routing_rules"
      },
      "skip_conditions": {
        "$ref": "../common_definitions.json#/skip_conditions"
      }
    },
    "additionalProperties": false,
    "required": [
      "id",
      "type"
    ],
    "oneOf": [
      {
        "required": [
          "content"
        ]
      },
      {
        "required": [
          "content_variants"
        ]
      }
    ]
  }
}
